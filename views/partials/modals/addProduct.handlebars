<div
  class='modal fade fs-6'
  id='add-product-modal'
  tabindex='-1'
  role='dialog'
  aria-labelledby='add-product-modal'
  aria-hidden='true'
>

  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Add a new product</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>

        {{! create space}}

        <form class='row g-3 align-items-end form-create-product'>
          <div class='col-auto'>
            <input
              type='text'
              class='form-control'
              id='new-product-name'
              placeholder='Product name'
            />
          </div>
          <div class='col-auto'>
            <input
              type='text'
              class='form-control'
              id='new-price'
              placeholder='price'
            />
          </div>
          <div class='col-auto'>
            <input
              type='number'
              class='form-control'
              id='new-stock'
              placeholder='in-stock'
            />
          </div>
          <div class='row-auto'>
            <select
              type='text'
              class='form-control warehouse-id'
              id='new-warehouse-id'
              placeholder='warehouse'
            >

            </select>

          </div>

          <div class='row-auto'>
            <select
              multiple
              type='text'
              class='form-control tag-id'
              id='new-tag-id'
              placeholder='tag'
            >
            </select>

          </div>

          <div class='row-auto'>
            <button
              type='submit'
              class='btn btn-primary shadow-sm'
              style='background-color:#0dcaf0'
              onclick='addProduct(event)'
            >Create</button>
          </div>
        </form>

      </div>
    </div>
  </div>
</div>