<div
  class='modal fade fs-6'
  id='add-product-modal'
  tabindex='-1'
  role='dialog'
  aria-labelledby='add-product-modal'
  aria-hidden='true'
>

  <div class='modal-dialog'>
    <div class='modal-content'>
      <div class='modal-header'>
        <h5 class='modal-title'>Add a new product</h5>
        <button
          type='button'
          class='btn-close'
          data-bs-dismiss='modal'
          aria-label='Close'
        ></button>
      </div>
      <div class='modal-body'>

        {{! create space}}

        <form class='row g-3 align-items-end form-create-product'>
          <div class='col-auto'>
            <input
              type='text'
              class='form-control'
              id='product-name'
              placeholder='Product name'
            />
          </div>
          <div class='col-auto'>
            <input
              type='text'
              class='form-control'
              id='price'
              placeholder='price'
            />
          </div>
          <div class='col-auto'>
            <input
              type='number'
              class='form-control'
              id='stock'
              placeholder='in-stock'
            />
          </div>
          <div class='col-auto'>
            <select
              type='number'
              class='form-control'
              id='category_id'
              placeholder='category'
            >

            </select>

          </div>

          <div class='col-auto'>
            <select
              multiple
              type='number'
              class='form-control'
              id='tag_id'
              placeholder='tag'
            >
            
            </select>

          </div>

          <div class='col-auto'>
            <button
              type='submit'
              class='btn btn-primary shadow-sm'
              onclick='addProduct(event)'
            >Create</button>
          </div>
        </form>

        {{! Footer }}
        <div class='modal-footer'>
          <button
            type='button'
            class='btn btn-secondary'
            data-bs-dismiss='modal'
          >Close</button>
        </div>
      </div>
    </div>
  </div>
</div>