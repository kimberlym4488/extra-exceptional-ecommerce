<div class='bg-primary text-white my-4'>
  <h3 class='card-header justify-content-start'>Here's your info on<b><i>
    {{product.product_name}}{{product.id}}</i></b></h3>
</div>

<div class='row row-cols-1 row-cols-md-4 g-4 justify-content-center'>

    <div class='col card gy-4 m-4 text-center'>
      <div class='card-body'>
        <h4 class='card-title'> {{product.product_name}}</h4>

        <ul class='list-group list-group-flush'>

          <li class='list-group-item'><b>Warehouse:
              {{product.category.category_name}}</b></li>
          <li class='list-group-item'>Price: ${{product.price}}</li>
          <li class='list-group-item'>In stock: {{product.stock}}</li>
          {{#if product.tags}}
            <h5>This product is available as a:</h5>
            {{#each product.tags as |tag|}}
              <li class='list-group-item border-0'>{{tag.tag_name}}</li>
            {{/each}}

          {{/if}}
        </ul>
        <div class='card-footer'>
          <i class="bi bi-pencil-fill"></i>
            <a id="edit-product" onclick="deleteProduct({{product.id}})" class='card-link danger'> edit</i>
            </a>
            <i class="bi bi-x-square-fill">
          <a id="delete-product" onclick="deleteProduct({{product.id}})" class='card-link danger'> delete</i>
          </a>
        </div>
      </div>
    </div>
    <br />

</div>
<script src="/js/product.js"></script>